<%= simple_form_for(@grupocont, wrapper: :input_group , defaults: { input_html: { class: 'form-control-sm' }, label_html: { class: 'col-form-label col-form-label-sm' } }  ) do |f| %>

<%= error_messages_for(@grupocont) %>
<div class="form-row justify-content-center">
	<div class="col-sm-12 col-md-10 col-lg-8">
		<div class="form_group">
			<%= f.input :nome, placeholder:"Digite o nome" %>

			<%= f.input :tipo, as: :radio_buttons, collection: @tipos  %>
			<%= f.input :ativo %>
			<hr>
			<%= btn_save %>
			<%= btn_cancel(grupoconts_path) %>
		</div>
	</div>
</div>
<% end %>

<%= simple_form_for(@banco) do |f| %>
<%= error_messages_for(@banco) %>
<div class="form-row justify-content-center">
  <div class="col-sm-12 col-md-12 col-lg-6">
    <div class="form_group">
      <%= f.input :nome %>
      <div class="form-row">
        <div class="form-group col-md-3">
          <%= f.input :agencia %>
        </div>
        <div class="form-group col-md-3">
          <%= f.input :conta %>
        </div>
      
      </div>
        <%= f.input :ativo %>
      <hr>
      <%= btn_save %>
      <%= btn_cancel(bancos_path) %>


    </div>
  </div>
</div>


<% end %>